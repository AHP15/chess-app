{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    "**/dist/",
    "**/frontend/dist/",
    "**/__tests__/",
    "**/frontend/__tests__/",
    "**/babel.config.js",
    "**/jest.config.js"
  ],
  "rules": {
    "no-console": "error",
    "import/no-unresolved": "off"
  }
}
